<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>VFEM2_ArcheryTarget</defName>
		<label>archery target</label>
		<description>A simple archery target mounted on a wooden stand. It's relaxing, and allows oneself to test their accuracy and train over time without risking fatal confrontation.</description>
		<graphicData>
			<texPath>Things/Building/Misc/ArcheryTarget/ArcheryTarget</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shadowData>
				<volume>(0.08, 0.2, 0.08)</volume>
				<offset>(0, 0, -0.1)</offset>
			</shadowData>
			<damageData>
				<rect>(0.3,0.3,0.4,0.4)</rect>
			</damageData>
		</graphicData>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<socialPropernessMatters>true</socialPropernessMatters>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<thingCategories>
			<li>BuildingsJoy</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkToBuild>100</WorkToBuild>
			<Mass>3</Mass>
			<Flammability>1.0</Flammability>
			<JoyGainFactor>1</JoyGainFactor>
		</statBases>
		<defaultPlacingRot>South</defaultPlacingRot>
		<building>
			<joyKind>Gaming_Dexterity</joyKind>
			<watchBuildingStandDistanceRange>8~9</watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>5</watchBuildingStandRectWidth>
			<watchBuildingInSameRoom>true</watchBuildingInSameRoom>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
		</building>
		<costList>
			<WoodLog>25</WoodLog>
			<Hay>30</Hay>
		</costList>
		<pathCost>14</pathCost>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
		<placeWorkers>
			<li>PlaceWorker_WatchArea</li>
		</placeWorkers>
		<designationCategory>Joy</designationCategory>
	</ThingDef>
	<ThingDef ParentName="BuildingBase">
		<defName>VFEM2_TrainingDummy</defName>
		<label>training dummy</label>
		<description>A target dummy made out of wood, soil, and dried plant matter. Surprisingly durable, allows oneself to test their swordsmanship and train over time without risking fatal confrontation.</description>
		<graphicData>
			<texPath>Things/Building/Misc/TrainingDummy/TrainingDummy</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.5,1.5)</drawSize>
			<shadowData>
				<volume>(0.7, 0.7, 1)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
		</graphicData>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<defaultPlacingRot>South</defaultPlacingRot>
		<socialPropernessMatters>true</socialPropernessMatters>
		<thingCategories>
			<li>BuildingsJoy</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>2500</WorkToBuild>
			<Mass>3</Mass>
			<Flammability>1.0</Flammability>
			<JoyGainFactor>1</JoyGainFactor>
		</statBases>
		<costList>
			<WoodLog>25</WoodLog>
			<Hay>30</Hay>
		</costList>
		<building>
			<joyKind>Gaming_Dexterity</joyKind>
		</building>
		<passability>Impassable</passability>
		<designationCategory>Joy</designationCategory>
		<uiIconPath>Things/Building/Misc/TrainingDummy/TrainingDummy_MenuIcon</uiIconPath>
		<uiIconScale>0.6</uiIconScale>
		<size>(1,1)</size>
		<fillPercent>1.0</fillPercent>
		<castEdgeShadows>false</castEdgeShadows>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>
