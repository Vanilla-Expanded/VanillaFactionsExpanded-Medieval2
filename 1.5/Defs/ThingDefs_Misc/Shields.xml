<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef Name="VFEM2_BaseShield" ParentName="BaseMeleeWeapon_Blunt_Quality" Abstract="True">
        <techLevel>Medieval</techLevel>
        <thingCategories Inherit="False">
            <li>VFEC_Shields</li>
        </thingCategories>
        <equippedStatOffsets>
            <ShootingAccuracyPawn>-2</ShootingAccuracyPawn>
            <MeleeHitChance>-2</MeleeHitChance>
            <MeleeDodgeChance>-5</MeleeDodgeChance>
        </equippedStatOffsets>
		<thingClass>VFECore.Apparel_Shield</thingClass>
		<apparel>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<bodyPartGroups>
				<li>LeftHand</li>
			</bodyPartGroups>
			<layers>
				<li>VFEC_OuterShell</li>
			</layers>
		<countsAsClothingForNudity>false</countsAsClothingForNudity>
		<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
        <comps>
            <li>
                <compClass>CompColorable</compClass>
            </li>
        </comps>
        <equippedAngleOffset>-30</equippedAngleOffset>
        <tools>
            <li>
                <label>base</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>centre</label>
                <labelUsedInLogging>false</labelUsedInLogging>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <modExtensions>
            <li Class="VFECore.ThingDefExtension">
                <useFactionColourForPawnKinds>
                    <li>VFEM2_Medieval_Footsoldier</li>
                    <li>VFEM2_Medieval_Knight</li>
                    <li>VFEM2_Medieval_Lord</li>
                </useFactionColourForPawnKinds>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef ParentName="VFEM2_BaseShield">
        <defName>VFEM2_Shield_Heater</defName>
        <label>heater shield</label>
        <description>A heavy medium-sized steel shield. Offers a significant amount of protection against melee and ranged attacks.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Shield/HeaterShield/HeaterShield</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.75</drawSize>
			<shaderType>CutoutComplex</shaderType>
        </graphicData>
        <costList>
            <Steel>100</Steel>
        </costList>
        <statBases>
            <MaxHitPoints>180</MaxHitPoints>
            <Flammability>0.4</Flammability>
            <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.55</ArmorRating_Blunt>
            <ArmorRating_Heat>0.9</ArmorRating_Heat>
            <WorkToMake>8000</WorkToMake>
            <Mass>4</Mass>
        </statBases>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
			<skillRequirements>
				<Crafting>9</Crafting>
			</skillRequirements>
		</recipeMaker>
        <comps>
            <li Class="VFECore.CompProperties_Shield">
                <shieldTags>
                    <li>MedievalDecent</li>
                </shieldTags>
                <useDeflectMetalEffect>true</useDeflectMetalEffect>
                <coveredBodyPartGroups>
                    <li>Torso</li>
                    <li>Arms</li>
                    <li>Hands</li>
                </coveredBodyPartGroups>
                <offHandGraphicData>
                    <texPath>Things/Item/Equipment/Shield/HeaterShield/HeaterShield</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <shaderType>CutoutComplex</shaderType>
                    <drawSize>1.5</drawSize>
                </offHandGraphicData>
                <offHandHoldOffset>
                    <northDefault>
                        <offset>(0, 0, 0.2)</offset>
                        <behind>true</behind>
                    </northDefault>
                    <east>
                        <offset>(-0.05, 0, 0.2)</offset>
                        <behind>true</behind>
                    </east>
                    <south>
                        <offset>(0, -0.04, 0.2)</offset>
                    </south>
                    <west>
                        <offset>(0.05, 0, 0.2)</offset>
                    </west>
                </offHandHoldOffset>
            </li>
        </comps>
		<!-- <colorGenerator Class="ColorGenerator_StandardApparel" /> -->
    </ThingDef>
	
	<!-- Vikings -->
    <ThingDef ParentName="VFEM2_BaseShield">
        <defName>VFEM2_Shield_Round</defName>
        <label>round shield</label>
        <description>A wooden shield held together with a metal band. A leather strap and metal handle are also present on the back to allow for easy one-handed maneuvering during combat.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Shield/RoundShield/RoundShield</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>1</drawSize>
        </graphicData>
        <costList>
            <WoodLog>75</WoodLog>
			<Steel>25</Steel>
        </costList>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
		</recipeMaker>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
            <ArmorRating_Heat>0.55</ArmorRating_Heat>
            <WorkToMake>2600</WorkToMake>
            <Mass>1.7</Mass>
        </statBases>
        <comps>
            <li Class="VFECore.CompProperties_Shield">
                <shieldTags>
                    <li>VikingBasic</li>
                </shieldTags>
                <useDeflectMetalEffect>false</useDeflectMetalEffect>
                <coveredBodyPartGroups>
                    <li>Neck</li>
                    <li>Torso</li>
                    <li>Arms</li>
                    <li>Hands</li>
                </coveredBodyPartGroups>
                <offHandGraphicData>
                    <texPath>Things/Item/Equipment/Shield/RoundShield/RoundShield</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <shaderType>CutoutComplex</shaderType>
                    <drawSize>1.6</drawSize>
                </offHandGraphicData>
                <offHandHoldOffset>
                    <northDefault>
                        <offset>(-0.05, 0, 0.2)</offset>
                        <behind>true</behind>
                    </northDefault>
                    <east>
                        <offset>(-0.15, 0, 0.2)</offset>
                        <behind>true</behind>
                    </east>
                    <south>
                        <offset>(0.2, -0.04, 0.2)</offset>
                    </south>
                    <west>
                        <offset>(0.15, 0, 0.2)</offset>
                    </west>
                </offHandHoldOffset>
            </li>
        </comps>
		<colorGenerator Class="ColorGenerator_StandardApparel" /> <!-- we'll see if this works -->
    </ThingDef>

</Defs>