  <ThingDef ParentName="ApparelMakeableBase">
    <defName>VFEM2_Apparel_Tabard</defName>
    <label>tabard</label>
    <description>A sleeveless cloth overgarment worn over armor or clothing, designed to display the wearer's heraldry. Though it provides no protection, it proudly showcases the colors and symbol of their allegiance.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Tabard/Tabard</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.6</Mass>
      <ArmorRating_Sharp>0</ArmorRating_Sharp>
      <ArmorRating_Blunt>0</ArmorRating_Blunt>
      <ArmorRating_Heat>0</ArmorRating_Heat>
      <Insulation_Cold>0</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <recipeMaker>
      <unfinishedThingDef>VFEM2_UnfinishedApparelNoStuff</unfinishedThingDef>
      <researchPrerequisite>VFEM2_Heraldry</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    </recipeMaker>
    <costList>
      <Cloth>20</Cloth>
    </costList>
    <equippedStatOffsets>
      <PainShockThreshold>0.05</PainShockThreshold>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
      </bodyPartGroups>
      <renderNodeProperties>
        <li Class="VFECore.PawnRenderNodeProperties_Omni">
          <nodeClass>VFECore.PawnRenderNode_Omni</nodeClass>
          <workerClass>VFECore.PawnRenderNodeWorker_OmniBodyApparel</workerClass>
          <parentTagDef>ApparelBody</parentTagDef>
          <baseLayer>36</baseLayer>
          <autoBodyTypePaths>true</autoBodyTypePaths>
          <autoBodyTypeMasks>true</autoBodyTypeMasks>
          <conditionalGraphics>
            <useFactionRNGSeed>true</useFactionRNGSeed>
            <!-- Mostly relevant if spawned by a faction that doesn't support Heraldry or was added mid-game, etc. -->
            <texPath>Things/Pawn/Humanlike/Apparel/Tabard/Tabard</texPath>
            <maskPaths>
              <li>Things/Heraldics/Masks/Barry/Tabard</li>
              <li>Things/Heraldics/Masks/BarryDancetty/Tabard</li>
              <li>Things/Heraldics/Masks/Bordure/Tabard</li>
              <li>Things/Heraldics/Masks/Cross/Tabard</li>
              <li>Things/Heraldics/Masks/PerBend/Tabard</li>
              <li>Things/Heraldics/Masks/PerChevron/Tabard</li>
              <li>Things/Heraldics/Masks/PerCross/Tabard</li>
              <li>Things/Heraldics/Masks/PerFess/Tabard</li>
              <li>Things/Heraldics/Masks/PerPale/Tabard</li>
              <li>Things/Heraldics/Masks/PerSaltier/Tabard</li>
            </maskPaths>
            <colorA>
              <primaryFactionIdeoColor>true</primaryFactionIdeoColor>
            </colorA>
            <colorB>
              <primaryFactionIdeoColor>true</primaryFactionIdeoColor>
              <hueRotate>-0.41</hueRotate>
              <invertValueIfBelow>0.5</invertValueIfBelow>
              <invertValueIfAbove>0.8</invertValueIfAbove>
              <minBrightness>0.35</minBrightness>
            </colorB>
            <alts>
              <li>
                <tagRequirements>
                  <li>HeraldryColorA</li>
                </tagRequirements>
                <texPath>Things/Pawn/Humanlike/Apparel/Tabard/Tabard</texPath>
                <maskPath>HeraldryPattern+/Tabard</maskPath>
                <colorA>
                  <taggedColor>HeraldryColorA</taggedColor>
                </colorA>
                <colorB>
                  <taggedColor>HeraldryColorB</taggedColor>
                </colorB>
              </li>
            </alts>
          </conditionalGraphics>
          <visibleFacing>
            <li>South</li>
            <li>North</li>
          </visibleFacing>
          <drawData>
            <dataNorth>
              <layer>88.5</layer>
            </dataNorth>
          </drawData>
        </li>
        <li Class="VFECore.PawnRenderNodeProperties_Omni">
          <nodeClass>VFECore.PawnRenderNode_Omni</nodeClass>
          <workerClass>VFECore.PawnRenderNodeWorker_OmniBodyApparel</workerClass>
          <parentTagDef>ApparelBody</parentTagDef>
          <baseLayer>38</baseLayer>
          <conditionalGraphics>
            <useFactionRNGSeed>true</useFactionRNGSeed>
            <!-- Mostly relevant if spawned by a faction that doesn't support Heraldry, temporary, was added mid-game, etc. -->
            <texPaths>
              <li>Things/Heraldics/Symbols/HeraldrySymbol_None</li>
              <li>Things/Heraldics/Symbols/HeraldrySymbol_Shield</li>
              <li>Things/Heraldics/Symbols/HeraldrySymbol_Crown</li>
              <li>Things/Heraldics/Symbols/HeraldrySymbol_Eagle</li>
              <li>Things/Heraldics/Symbols/HeraldrySymbol_Castle</li>
              <li>Things/Heraldics/Symbols/HeraldrySymbol_Sun</li>
              <li>Things/Heraldics/Symbols/HeraldrySymbol_Temple</li>
              <li>Things/Heraldics/Symbols/HeraldrySymbol_Anchor</li>
            </texPaths>
            <colorA>
              <color>(0.35,0.35,0.35)</color>
            </colorA>
            <shader>Cutout</shader>
            <alts>
              <li>
                <tagRequirements>
                  <li>HeraldryColorA</li>
                </tagRequirements>
                <texPath>HeraldrySymbol</texPath>
                <colorA>
                  <taggedColor>HeraldrySymbolColor</taggedColor>
                </colorA>
                <shader>Cutout</shader>
              </li>
            </alts>
          </conditionalGraphics>
          <visibleFacing>
            <li>South</li>
            <li>North</li>
          </visibleFacing>
          <drawData>
            <scale>0.195</scale>
            <defaultData>
              <offset>(0,0,-0.20)</offset>
            </defaultData>
            <dataNorth>
              <layer>90</layer>
              <offset>(0,0,-0.12)</offset>
            </dataNorth>
            <bodyTypeScales>
              <Hulk>1.35</Hulk>
              <Fat>1.1</Fat>
              <Thin>0.9</Thin>
            </bodyTypeScales>
          </drawData>
        </li>
      </renderNodeProperties>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Tabard/Tabard</wornGraphicPath>
      <layers>
        <li>VFEC_OuterShell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <tags>
        <li>VFEM2_Tabard</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
	  <comps>
      <li Class="VFEMedieval.CompProperties_EditHeraldic"/>
    </comps>
  </ThingDef>

