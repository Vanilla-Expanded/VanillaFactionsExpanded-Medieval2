<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="BaseWeaponNeolithic">
		<defName>VFEM2_ThrowingAxe</defName>
		<label>throwing axe</label>
		<description>A single-handed axe made for throwing. Light enough to be thrown accurately at medium range, it's also a great melee weapon in the hands of a capable warrior.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/ThrowingAxe</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_BeatFire</soundInteract>
		<costStuffCount>65</costStuffCount>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<techLevel>Medieval</techLevel>
		<statBases>
			<WorkToMake>7200</WorkToMake>
			<Mass>1.2</Mass>
			<AccuracyTouch>0.82</AccuracyTouch>
			<AccuracyShort>0.68</AccuracyShort>
			<AccuracyMedium>0.30</AccuracyMedium>
			<AccuracyLong>0.10</AccuracyLong>
			<RangedWeapon_Cooldown>1.8</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>VikingRangedBasic</li>
		</weaponTags>
		<weaponClasses>
			<li>VFEM2_Vikings</li>
			<li>ShortShots</li>
			<li>Ranged</li>
		</weaponClasses>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>FueledSmithy</li>
				<li>ElectricSmithy</li>
			</recipeUsers>
			<researchPrerequisite>Smithing</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>VFEM2V_ThrowingAxe_Thrown</defaultProjectile>
				<warmupTime>3.6</warmupTime>
				<range>7.5</range>
				<soundCast>Interact_BeatFire</soundCast>
			</li>
		</verbs>
		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>blade</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>12</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<modExtensions>
			<li Class="VFECore.ThingDefExtension">
				<usableWithShields>true</usableWithShields>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="BaseProjectileNeolithic">
		<defName>VFEM2V_ThrowingAxe_Thrown</defName>
		<label>thrown axe</label>
		<graphicData>
			<texPath>Things/Projectile/AxeThrown</texPath>
			<graphicClass>Graphic_Flicker</graphicClass>
		</graphicData>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<damageDef>RangedStab</damageDef>
			<damageAmountBase>18</damageAmountBase>
			<stoppingPower>2</stoppingPower>
			<armorPenetrationBase>0.25</armorPenetrationBase>
			<speed>45</speed>
		</projectile>
	</ThingDef>
	
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>VFEM2_Gun_Arquebus</defName>
    <label>arquebus</label>
    <description>An ancient firearm with a smoothbore barrel, the arquebus delivers powerful shots at decent range. The lead balls lose velocity and damage with distance, and are extremely ineffective against armor. Due to the chempowder reaction when firing the arquebus, plumes of blindsmoke are ejected from the barrel.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Arquebus</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>LongShots</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>3.7</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>4.0</RangedWeapon_Cooldown>
	  <MarketValue>165</MarketValue>
    </statBases>
	<equippedAngleOffset>45</equippedAngleOffset>
    <costList>
      <WoodLog>60</WoodLog>
      <Steel>20</Steel>
	  <Chemfuel>10</Chemfuel>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <researchPrerequisite>VFEM2_Matchlocks</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <displayPriority>416</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VFEM2_Bullet_Arquebus</defaultProjectile>
        <warmupTime>2.2</warmupTime>
        <range>36.9</range>
        <soundCast>Shot_BoltActionRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
		<armorPenetrationBase>0.13</armorPenetrationBase>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
		<armorPenetrationBase>0.13</armorPenetrationBase>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
